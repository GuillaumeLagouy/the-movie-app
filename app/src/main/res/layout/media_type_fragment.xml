<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        >

            <TextView
                android:id="@+id/browseMovies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="40sp"
                android:paddingStart="10sp"
                android:gravity="center_vertical"
                android:layout_weight=".30"
                android:text="Parcourir les films"
                android:textColor="@color/design_default_color_on_primary"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
            />

            <TextView
                android:id="@+id/browseSeries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="40sp"
                android:paddingStart="10sp"
                android:gravity="center_vertical"
                android:layout_weight=".30"
                android:text="Parcourir les sÃ©ries"
                android:textColor="@color/design_default_color_on_primary"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/browseMovies"
            />

            <TextView
                android:id="@+id/browseActors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="40sp"
                android:layout_marginBottom="40sp"
                android:paddingStart="10sp"
                android:gravity="center_vertical"
                android:layout_weight=".30"
                android:text="Parcourir les acteurs"
                android:textColor="@color/design_default_color_on_primary"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/browseSeries"
            />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>